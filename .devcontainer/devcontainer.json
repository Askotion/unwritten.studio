{
	"name": "Hugo",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"GO_VERSION": "1.22.3",
			"HUGO_VERSION": "0.126.1"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"bradlc.vscode-tailwindcss",
				"budparr.language-hugo-vscode",
				"tamasfe.even-better-toml"
			]
		}
	},
	"remoteUser": "node",
	"postCreateCommand": "npm install && npm run dev",
	"forwardPorts": [1313],

	// ðŸ‘‡ Add these to support the 1Password SSH agent
	"mounts": [
		"type=bind,source=/private/tmp/com.apple.launchd.GVTjDCVJr5/Listeners,target=/ssh-agent"
	],
	"containerEnv": {
		"SSH_AUTH_SOCK": "/ssh-agent"
	}
}
